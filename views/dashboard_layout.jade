doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')

    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/dashboard.css')
    //- link(rel='icon', href='../../../../favicon.ico')

    block custom_link

  body
    
    nav.navbar.navbar-dark.sticky-top.bg-dark.flex-md-nowrap.p-0
      a.navbar-brand.col-sm-3.col-md-2.mr-0(href='/') Mosaic

      input.form-control.form-control-dark.w-100(type='text' placeholder='Search' aria-label='Search')
      
      if !user
        ul.navbar-nav.px-3
          li.nav-item
            a.nav-link(class=(title == 'Login' ? 'active' : '') href='/users/login') Login

      if user
        ul.navbar-nav.px-3
          li.nav-item
            a.nav-link(href='/users/logout') Logout

    .container-fluid
      .row.d-flex
        nav.col-md-2.d-none.d-md-block.bg-light.sidebar.collapse.show
          .sidebar-sticky
            ul.nav.flex-column
              li.nav-item
                a.nav-link(class=(title == 'Dashboard' ? 'active' : '') href='/')
                  span(data-feather='home') 
                  | Dashboard
                  span.sr-only
              li.nav-item
                a.nav-link(class=(title == 'Users' ? 'active' : '') href='/users/')
                  span(data-feather='user') 
                  | Users
                  span.sr-only
              li.nav-item
                a.nav-link(class=(title == 'Jemaat' ? 'active' : '') href='/jemaat')
                  span(data-feather='users') 
                  | Jemaat
                  span.sr-only
              li.nav-item
                a.nav-link(class=(title == 'Fresh' ? 'active' : '') href='/fresh')
                  span(data-feather='layers') 
                  | Fresh
                  span.sr-only
              li.nav-item
                a.nav-link(class=(title == 'Ibadah' ? 'active' : '') href='/ibadah')
                  span(data-feather='calendar') 
                  | Ibadah
                  span.sr-only

            hr
            h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
              span Fitur
                a.d-flex.align-items-center.text-muted
            ul.nav.flex-column.mb-2
              li.nav-item
                a.nav-link(href="/absensi_fresh")
                  span(data-feather="edit")
                  | Absensi Ibadah Fresh

            hr
            h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-1.text-muted
              span Settings
                a.d-flex.align-items-center.text-muted

            ul.nav.flex-column.mb-2
              li.nav-item
                a.nav-link(href="setting")
                  span(data-feather="file-text")
                  | Data Gereja

      main.col-md-9.ml-sm-auto.col-lg-10.pt-3.px-4(role='main')

        ol.breadcrumb
          li.breadcrumb-item
            a(href="/") Dashboard
          li.breadcrumb-item.active #{title}        
        
        != messages()

        block content

      br

script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js', integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN', crossorigin='anonymous')
script(src='/javascripts/bootstrap.js')
script(src="https://unpkg.com/feather-icons/dist/feather.min.js")
script feather.replace()

block custom_script